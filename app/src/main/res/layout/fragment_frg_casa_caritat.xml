<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.portatil.coloniescat.frgCasaCaritat">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="206dp"
                    app:srcCompat="@drawable/casacaritat"
                    android:id="@+id/imageView3" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/layout1"
                android:weightSum="1">

                <TextView
                    android:text="C/mont alegre 5-7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:layout_weight="0.13" />

                <TextView
                    android:text="Centre de beneficencia entre 1802 i 1956, actualment es un centre cultura"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:layout_weight="0.13"
                    android:textSize="28dp"/>

                <TextView
                    android:text="Pregunta: Busca la teva propia imatge al CCCB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:layout_weight="0.13" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editResposta"
                    android:layout_weight="0.13"
                    android:hint="Resposta" />

                <Button
                    android:text="Guarda resposta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/resposta"
                    android:layout_weight="0.13" />
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</FrameLayout>
